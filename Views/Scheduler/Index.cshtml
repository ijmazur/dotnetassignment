@* @model dynamic *@
@model IEnumerable<Scheduler>
@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Task</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Scheduler" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp; Create New Task
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
        <tr>
            <th>
                Task
            </th>
            <th>
                Description
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>

                <td width="30%">
                    @obj.Description
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>